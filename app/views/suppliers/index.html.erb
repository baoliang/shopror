<table class="displaytable">
  <tbody>
  <tr>
    <td><h1>产地列表</h1></td>
  </tr>
  </tbody>
</table>
<table class="formatted">
  <thead>
  <tr class="header">
    <th>产地</th>
  </tr>
  </thead>
  <tbody>
  <% @suppliers.each_with_index do |supplier, index| %>
      <tr bgcolor="<%= index % 2 == 0 ? '#eeeeee' : '#dddddd' %>">
        <td><%= link_to supplier.name, supplier %></td>
      </tr>
  <% end %>
  </tbody>
</table>
